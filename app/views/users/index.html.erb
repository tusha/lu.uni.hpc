 
<h3>Users</h3>
<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Username</th>
      <th>Kind</th>
      <th>E-mail</th>
      <th>Phone Number</th>
      <th>Mobile</th>      
      <th>Id account</th>
      <th>Id address</th>
      <th>Is Active</th>
      <th>Login Retries</th>      
      <th>Last Login Date</th>    
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.username %></td>
        <td><%= user.kind %></td>
        <td><a data-toggle="modal" href="#" class="email" id="user_mail"><%= user.email %></a></td>
        <td><%= user.phonenumber %></td>
        <td><%= user.mobile %></td>        
        <td><%= user.id_account %></td>
        <td><%= user.id_address %></td>
        <td><%= user.isactive %></td>
        <td><%= user.loginretries %></td>        
        <td><%= user.lastlogindate %></td>   
        <td><%= user.role %></td>
        <td><%= link_to 'View', view_path(user)%></td>       
        <%if can? :destroy, @user%>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td><%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<script type="text/javascript">
var mail;
    $(document).ready(function(){
    	$("#hdn_form").css("display","none");
        $('#email_modal').modal('hide');
        
        $(".email").click(function(){
        	mail=$("#user_mail").text();
        	$("#hdn_form").css("display","block");
        	$("#eml").val(mail);
        	$("#eml").attr('readonly', 'true');
        	$('#email_modal').modal('show');
        });
    });
</script>

<div id="hdn_form"><%=render partial: 'supports/form', :locals => {:support => @support}%></div>

